{{setTitle '{{recipe.title}} - Forks of Italy'}}

<article class="recipe-detail">
    <img src="{{recipe.image}}">
    <div id="content-details">
        <h2>{{recipe.title}}</h2>
        <p>{{recipe.description}}</p>

        <h3>-----------------------------------------------------</h3>

        <h3>Ingredients:</h3>
        <p>{{recipe.ingredients}}</p>

        <h3>-----------------------------------------------------</h3>

        <h3>Instructions:</h3>
        <p>{{recipe.instructions}}</p>

        <h3>-----------------------------------------------------</h3>

        <h3>People Who Recommend: {{totalRecomended}}</h3>
    </div>
    {{#if isAuthenticated}}
    <div class="command">
        {{#if isCreator}}
        <a href="/recipes/{{post.id}}/edit">Edit</a>
        <a href="/recipes/{{post.id}}/delete">Delete</a>
        {{else}}
            {{#if isRecommended}}
            <a href="/recipes/{{post.id}}/recommend">Recommend</a>
            {{else}}
            <p>You've already recommended this recipe!</p>
            {{/if}}
         {{/if}}
    </div>
    {{/if}}
</article>